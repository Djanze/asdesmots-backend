pipeline {
    // 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 github token
    agent any
    options {
        buildDiscarder(logRotator(numToKeepStr: '5',daysToKeepStr: '5'))
        timestamps();
    }

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')
    }

    stages {    

        stage('Build') {
            steps {
                sh 'docker build -t yabain/as-des-mots'
            }
        }

        stage('Login') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }

        stage('Push') {
            steps {
                sh 'docker push yabain/as-des-mots'
            }
        }
    }

    post {
        always {
            sh 'docker logout'
        }
    }
}